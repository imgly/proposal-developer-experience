{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "JSON-RPC 2.0",
  "type": "object",
  "required": ["jsonrpc", "method"],
  "properties": {
    "jsonrpc": {
      "type": "string",
      "enum": ["2.0"]
    },
    "method": {
      "type": "string"
    },
    "params": {
      "oneOf": [
        { "type": "array" },
        { "type": "object" }
      ]
    },
    "id": {
      "oneOf": [
        { "type": "integer" },
        { "type": "string" },
        { "type": "null" }
      ]
    }
  },
  "additionalProperties": false
}
